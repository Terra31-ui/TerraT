---
import Layout from '../../components/Layout.astro';
---

<Layout title="Welcome to TerraTAC - Professional Tactical Gear">
  <section class="bg-gradient-to-r from-gray-900 to-gray-700 text-white py-20">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h1 class="text-5xl font-bold mb-6">Welcome to TerraTAC</h1>
      <p class="text-2xl mb-8 text-gray-200">This Is Your Gateway To Professional Tactical Gear!</p>
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-red-400 mb-4">#1 TAC SUPPLIER</h2>
        <p class="text-xl text-gray-300">Professional Equipment You Can Trust</p>
      </div>
      <div class="space-x-4">
        <a href="/" class="bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg inline-block">
          View Products
        </a>
        <a href="/cart" class="text-base font-bold text-black hover:text-white hover:bg-red-600 hover:border-red-700 border-2 border-transparent px-8 py-4 rounded shadow transition-all duration-200 inline-block">
          View Cart
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="text-3xl font-bold mb-8 text-gray-800">Why Choose TerraPro?</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6">
          <h4 class="text-xl font-bold mb-4 text-blue-600">Professional Quality</h4>
          <p class="text-gray-700">High-grade tactical equipment trusted by law enforcement and security professionals.</p>
        </div>
        <div class="p-6">
          <h4 class="text-xl font-bold mb-4 text-blue-600">UK Standards</h4>
          <p class="text-gray-700">All products meet or exceed UK safety and quality standards for professional use.</p>
        </div>
        <div class="p-6">
          <h4 class="text-xl font-bold mb-4 text-blue-600">Fast Delivery</h4>
          <p class="text-gray-700">Quick dispatch and reliable delivery across the UK for urgent operational needs.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<footer class="bg-gray-800 text-white text-center py-6 mt-8">
  <div class="flex justify-center gap-8">
    <a href="/about" class="hover:text-blue-400">About</a>
    <a href="/blog" class="hover:text-blue-400">Blog</a>
  </div>
</footer>