---
import Layout from '../../components/Layout.astro';
---

<Layout title="Ballistic Helmet">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/ballistic-helmet.png" alt="Ballistic Helmet" class="w-full rounded-lg" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">Ballistic Helmet</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£120.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">
            High-protection ballistic helmet designed for tactical operations. Lightweight, adjustable, and compatible with most headsets and accessories.
          </p>
        </div>
        <button onclick="addToCart('ballistic-helmet', 1, '£120.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £120.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
    <script src="/cart.js" is:inline></script>