---
import Layout from '../../components/Layout.astro';
---

<Layout title="Starter Backpack">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/starter-backpack.png" alt="Starter Backpack" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">Starter Backpack</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£19.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">
            Affordable and lightweight backpack, perfect for beginners or everyday use. Features a spacious main compartment and comfortable straps.
          </p>
        </div>
        <label for="size" class="block mb-2 font-semibold text-gray-800">Select UK Unisex Size:</label>
        <select id="size" name="size" class="mb-4 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
          <option value="">Choose a size</option>
          <option value="XS">XS (UK 6-8)</option>
          <option value="S">S (UK 8-10)</option>
          <option value="M">M (UK 12-14)</option>
          <option value="L">L (UK 16-18)</option>
          <option value="XL">XL (UK 20-22)</option>
          <option value="XXL">XXL (UK 24-26)</option>
        </select>
        <button onclick="addToCart('starter-backpack', 1, '£19.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £19.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
  <script src="/cart.js" is:inline></script>
</Layout>