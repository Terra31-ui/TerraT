---
import Layout from '../../components/Layout.astro';
---

<Layout title="TAC Thermal Scope">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/tac-thermal-scope.png" alt="TAC Thermal Scope" class="w-full rounded-lg" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">TAC Thermal Scope</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£399.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">
            Advanced thermal imaging scope for tactical and hunting applications. Features high-resolution display, multiple color palettes, and rugged weatherproof housing.
          </p>
        </div>
        <button onclick="addToCart('tac-thermal-scope', 1, '£399.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £399.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
</Layout>
<script src="/cart.js" is:inline></script>