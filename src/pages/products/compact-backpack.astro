---
import Layout from '../../components/Layout.astro';
---

<Layout title="Compact Backpack">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/compact-backpack.png" alt="Compact Backpack" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">Compact Backpack</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£27.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">
            Lightweight and durable compact backpack, ideal for day trips and everyday carry. Features multiple compartments and water-resistant material.
          </p>
        </div>
        <label for="size" class="block mb-2 font-semibold text-gray-800">Select UK Shoe Size:</label>
        <select id="size" name="size" class="mb-4 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
          <option value="">Choose a size</option>
          <option value="3">UK 3 / EU 35.5 / US 4 / 220mm</option>
          <option value="4">UK 4 / EU 37 / US 5 / 229mm</option>
          <option value="5">UK 5 / EU 38 / US 6 / 237mm</option>
          <option value="6">UK 6 / EU 39 / US 7 / 246mm</option>
          <option value="7">UK 7 / EU 40.5 / US 8 / 254mm</option>
          <option value="7.5">UK 7.5 / EU 41 / US 8.5 / 258mm</option>
          <option value="8">UK 8 / EU 42 / US 9 / 262mm</option>
          <option value="8.5">UK 8.5 / EU 42.5 / US 9.5 / 266mm</option>
          <option value="9">UK 9 / EU 43 / US 10 / 271mm</option>
          <option value="9.5">UK 9.5 / EU 44 / US 10.5 / 275mm</option>
          <option value="10">UK 10 / EU 44.5 / US 11 / 279mm</option>
          <option value="10.5">UK 10.5 / EU 45 / US 11.5 / 283mm</option>
          <option value="11">UK 11 / EU 46 / US 12 / 288mm</option>
          <option value="12">UK 12 / EU 47 / US 13 / 296mm</option>
          <option value="13">UK 13 / EU 48 / US 14 / 305mm</option>
          <option value="14">UK 14 / EU 49.5 / US 15 / 314mm</option>
        </select>
        <button onclick="addToCart('compact-backpack', 1, '£27.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £27.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
    <script src="/cart.js" is:inline></script>