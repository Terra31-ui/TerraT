---
import Layout from '../../components/Layout.astro';
---

<Layout title="TAC Gloves">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/pro-tac-gloves.png" alt="TAC Gloves" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">TAC Gloves</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£65.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">Professional tactical gloves with Kevlar lining and touchscreen compatibility for maximum protection and utility.</p>
        </div>
        <button onclick="addToCart('pro-tac-gloves', 1, '£65.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £65.00
        </button>
      </div>
    </div>
  </section>
  <script src="/cart.js" is:inline></script>
</Layout>