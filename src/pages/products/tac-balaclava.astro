---
import Layout from '../../components/Layout.astro';
---

<Layout title="TAC-Balaclava">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/TAC-Balaclava.png" alt="TAC-Balaclava" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">TAC-Balaclava</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£20.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">Lightweight, breathable tactical balaclava for all-weather protection. Perfect for outdoor, airsoft, and security use. Moisture-wicking, quick-dry fabric. Universal fit.</p>
        </div>
        <button onclick="addToCart('tac-balaclava', 1, '£20.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £20.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
  <script src="/cart.js" is:inline></script>
</Layout>
