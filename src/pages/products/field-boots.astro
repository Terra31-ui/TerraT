---
import Layout from '../../components/Layout.astro';
---

<Layout title="Field Boots">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        
      <div>
        <img src="/products/field-boots.png" alt="Field Boots" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      </div>
      <h1 class="text-3xl font-bold mb-4">Field Boots</h1>
          <p class="text-gray-700">Affordable, durable boots for everyday tactical use. Water-resistant and comfortable for long wear.</p>
        </div>
        <button onclick="addToCart('field-boots', 1, '£48.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £48.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
  <script src="/cart.js" is:inline></script>
</Layout>