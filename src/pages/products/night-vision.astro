---
import Layout from '../../components/Layout.astro';
---

<Layout title="Night Vision Goggles">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/night-vision.png" alt="Night Vision Goggles" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      <div>
        <img src="/products/night-vision.png" alt="Night Vision Goggles" class="w-full rounded-lg" width="600" height="600" loading="lazy" />
      </div>
      <h1 class="text-3xl font-bold mb-4">Night Vision Goggles</h1>
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">
            Advanced night vision goggles for tactical operations and outdoor adventures. Features adjustable straps, clear optics, and long battery life.
          </p>
        </div>
        <button onclick="addToCart('night-vision', 1, '£199.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £199.00
        </button>
        <a href="/cart" class="block mt-4 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-lg w-full text-center">View Cart</a>
      </div>
    </div>
  </section>
    <script src="/cart.js" is:inline></script>