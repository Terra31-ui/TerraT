---
import Layout from '../../components/Layout.astro';
---

<Layout title="Tactical Defense Pen">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/tactical-pen.png" alt="Tactical Defense Pen" class="w-full rounded-lg" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">Tactical Defense Pen</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£18.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">A discreet, robust pen that doubles as a self-defense tool. Write in any conditions and stay prepared.</p>
        </div>
        <button onclick="addToCart('tactical-pen', 1, '£18.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £18.00
        </button>
      </div>
    </div>
  </section>
  <script src="/cart.js" is:inline></script>
</Layout>