---
import { completeImages, neededImages } from './_image-checklist.mjs';
---

<h1 class="text-2xl font-bold mb-6">Image Checklist</h1>

<section class="mb-8">
  <h2 class="text-xl font-semibold mb-2">✅ Complete Images</h2>
  <ul class="list-disc pl-6">
    {completeImages.length > 0
      ? completeImages.map(img => <li key={img.id}>{img.id} - {img.filename}</li>)
      : <li class="text-gray-500">None</li>
    }
  </ul>
</section>

<section>
  <h2 class="text-xl font-semibold mb-2">❌ Needed Images</h2>
  <ul class="list-disc pl-6">
    {neededImages.length > 0
      ? neededImages.map(img => <li key={img.id}>{img.id} - {img.filename}</li>)
      : <li class="text-gray-500">None</li>
    }
  </ul>
</section>