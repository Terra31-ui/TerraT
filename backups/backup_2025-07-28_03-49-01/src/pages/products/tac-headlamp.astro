---
import Layout from '../../components/Layout.astro';
---

<Layout title="TAC Headlamp">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/tac-headlamp.png" alt="TAC Headlamp" class="w-full rounded-lg" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">TAC Headlamp</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£22.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">
            High-intensity tactical headlamp with adjustable brightness and comfortable strap. Perfect for hands-free illumination in any environment.
          </p>
        </div>
        <button onclick="addToCart('tac-headlamp', 1, '£22.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £22.00
        </button>
      </div>
    </div>
  </section>
    <script src="/cart.js" is:inline></script>