---
import Layout from '../../components/Layout.astro';
import { catalogue } from '../../data/products.js';

const { slug } = Astro.params;

// Find the product by id (id is already slug-like)
const product = catalogue.find(p => p.id === slug);

if (!product) {
  throw new Error('Product not found');
}
---

<Layout title={`${product.name} - TerraTAC`}>
  <section class="max-w-3xl mx-auto py-12 px-4">
    <div class="flex flex-col md:flex-row gap-8 items-center">
      <img src={product.img} alt={product.name} class="w-64 h-64 object-contain rounded shadow" />
      <div>
        <h1 class="text-3xl font-bold mb-2">{product.name}</h1>
        <div class="text-2xl font-bold text-green-700 mb-4">{product.price}</div>
        <p class="mb-6 text-gray-700">{product.description}</p>
        <button
          id="add-to-cart-btn"
          class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full"
        >
          Add to Cart - {product.price}
        </button>
      </div>
    </div>
  </section>
  <script is:inline>
  function addToCart(id, name, price, qty = 1) {
    let cart = JSON.parse(localStorage.getItem('cart')) || [];
    const found = cart.find(item => item.id === id);
    if (found) {
      found.qty += qty;
    } else {
      cart.push({ id, name, price, qty });
    }
    localStorage.setItem('cart', JSON.stringify(cart));
    window.dispatchEvent(new CustomEvent('cartUpdated'));
    alert('Added to cart!');
  }

  document.addEventListener('DOMContentLoaded', function() {
    const btn = document.getElementById('add-to-cart-btn');
    if (btn) {
      btn.onclick = function() {
        addToCart(
          `${product.id}`,
          `${product.name}`,
          `${product.price}`,
          1
        );
      };
    }
  });
  </script>
</Layout>