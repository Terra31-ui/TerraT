---
import Layout from '../../components/Layout.astro';
---

<Layout title="Stab Vest">
  <section class="max-w-4xl mx-auto mt-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <img src="/products/stab-vest.png" alt="Stab Vest" class="w-full rounded-lg" />
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-4">Stab Vest</h1>
        <div class="text-3xl font-bold text-red-600 mb-6">£50.00</div>
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-2">Description</h3>
          <p class="text-gray-700">Certified stab-resistant vest for personal protection. Lightweight, adjustable, and suitable for security professionals and civilians.</p>
        </div>
        <button onclick="addToCart('stab-vest', 1, '£50.00')" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors text-lg w-full">
          Add to Cart - £50.00
        </button>
      </div>
    </div>
  </section>
  <script src="/cart.js" is:inline></script>
</Layout>